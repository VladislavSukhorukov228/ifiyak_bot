# Section: –ü–ª–∞—Ç–Ω–æ–µ –æ–±—É—á–µ–Ω–∏–µ
def handle_paid_education(chat_id):
    text = "–í —ç—Ç–æ–º —Ä–∞–∑–¥–µ–ª–µ –í—ã –Ω–∞–π–¥–µ—Ç–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Å—Ç–æ–∏–º–æ—Å—Ç–∏ –æ–±—É—á–µ–Ω–∏—è, –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏–∏ –¥–æ–≥–æ–≤–æ—Ä–∞ –∏ —Å–ø–æ—Å–æ–±–∞—Ö –æ–ø–ª–∞—Ç—ã. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â—É—é –í–∞—Å —Ç–µ–º—É:"
    markup = InlineKeyboardMarkup(row_width=1)
    buttons = [
        InlineKeyboardButton("–°—Ç–æ–∏–º–æ—Å—Ç—å –∏ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –º–µ—Å—Ç", callback_data='paid_cost'),
        InlineKeyboardButton("–û—Ñ–æ—Ä–º–ª–µ–Ω–∏–µ –¥–æ–≥–æ–≤–æ—Ä–∞", callback_data='paid_contract'),
        InlineKeyboardButton("–û–ø–ª–∞—Ç–∞", callback_data='paid_payment'),
        InlineKeyboardButton("–°–∫–∏–¥–∫–∏ –∏ –ª—å–≥–æ—Ç—ã", callback_data='paid_discounts')
    ]
    markup.add(*buttons)
    markup.add(InlineKeyboardButton("üîô –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data='main'))
    bot.send_message(chat_id, text, reply_markup=markup)

def handle_paid_sub(chat_id, data):
    if data == 'paid_cost':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–°–∫–æ–ª—å–∫–æ —Å—Ç–æ–∏—Ç –æ–±—É—á–µ–Ω–∏–µ?", callback_data='paid_cost_price'),
            InlineKeyboardButton("–°–∫–æ–ª—å–∫–æ –ø–ª–∞—Ç–Ω—ã—Ö –º–µ—Å—Ç –Ω–∞ –∫–∞–∂–¥–æ–º –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–∏?", callback_data='paid_cost_places'),
            InlineKeyboardButton("–ú–æ–∂–Ω–æ –ª–∏ —É—á–∞—Å—Ç–≤–æ–≤–∞—Ç—å –≤ –∫–æ–Ω–∫—É—Ä—Å–µ –Ω–∞ –ø–ª–∞—Ç–Ω–æ–π –æ—Å–Ω–æ–≤–µ –∏ –Ω–∞ –±—é–¥–∂–µ—Ç –æ–¥–Ω–æ–≤—Ä–µ–º–µ–Ω–Ω–æ?", callback_data='paid_cost_both')
        )
        markup.add(*back_home_buttons('paid_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'paid_cost_price':
        text = PLACEHOLDER
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('paid_cost', 'main'))
    elif data == 'paid_cost_places':
        text = """–í 2026 –≥–æ–¥—É –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø–ª–∞—Ç–Ω—ã—Ö –º–µ—Å—Ç —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–æ —Å–ª–µ–¥—É—é—â–∏–º –æ–±—Ä–∞–∑–æ–º:
o	–ñ—É—Ä–Ω–∞–ª–∏—Å—Ç–∏–∫–∞ ‚Äî 38 –º–µ—Å—Ç;
