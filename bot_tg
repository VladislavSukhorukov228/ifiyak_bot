        bot.send_message(chat_id, text, reply_markup=back_home_buttons('paid_discounts', 'main'))
    elif data == 'paid_main':
        handle_paid_education(chat_id)

# Section: –û–±—â–µ–∂–∏—Ç–∏–µ
def handle_dormitory(chat_id):
    text = "–ú—ã –ø–æ–Ω–∏–º–∞–µ–º, —á—Ç–æ –ø–µ—Ä–µ–µ–∑–¥ –≤ –¥—Ä—É–≥–æ–π –≥–æ—Ä–æ–¥ ‚Äî —ç—Ç–æ –≤–∞–∂–Ω—ã–π —à–∞–≥. –í —ç—Ç–æ–º —Ä–∞–∑–¥–µ–ª–µ –í—ã –Ω–∞–π–¥–µ—Ç–µ –≤—Å—é –Ω–µ–æ–±—Ö–æ–¥–∏–º—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ–± —É—Å–ª–æ–≤–∏—è—Ö –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª–µ–Ω–∏—è –æ–±—â–µ–∂–∏—Ç–∏–π –∏ –æ –∑–∞—Å–µ–ª–µ–Ω–∏–∏. –í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â—É—é –í–∞—Å —Ç–µ–º—É:"
    markup = InlineKeyboardMarkup(row_width=1)
    buttons = [
        InlineKeyboardButton("–ü—Ä–µ–¥–æ—Å—Ç–∞–≤–ª–µ–Ω–∏–µ –º–µ—Å—Ç", callback_data='dorm_provision'),
        InlineKeyboardButton("–î–æ–∫—É–º–µ–Ω—Ç—ã –∏ –∑–∞—Å–µ–ª–µ–Ω–∏–µ", callback_data='dorm_docs'),
        InlineKeyboardButton("–°—Ç–æ–∏–º–æ—Å—Ç—å –∏ –±—ã—Ç–æ–≤—ã–µ —É—Å–ª–æ–≤–∏—è", callback_data='dorm_cost')
    ]
    markup.add(*buttons)
    markup.add(InlineKeyboardButton("üîô –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data='main'))
    bot.send_message(chat_id, text, reply_markup=markup)

def handle_dorm_sub(chat_id, data):
    if data == 'dorm_provision':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –í–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–ï—Å–ª–∏ —è –ø–æ—Å—Ç—É–ø–∏–ª –Ω–∞ –ø–ª–∞—Ç–Ω–æ–µ, –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª—è–µ—Ç—Å—è –ª–∏ –º–Ω–µ –æ–±—â–µ–∂–∏—Ç–∏–µ?", callback_data='dorm_prov_who'),
            InlineKeyboardButton("–ú–æ–∂–Ω–æ –ª–∏ —Å–∞–º–æ–º—É –≤—ã–±—Ä–∞—Ç—å –æ–±—â–µ–∂–∏—Ç–∏–µ?", callback_data='dorm_prov_choose'),
            InlineKeyboardButton("–ì–¥–µ –Ω–∞—Ö–æ–¥—è—Ç—Å—è –æ–±—â–µ–∂–∏—Ç–∏—è –ò–§–∏–Ø–ö?", callback_data='dorm_prov_location'),
            InlineKeyboardButton("–ú–æ–≥—É –ª–∏ —è –∑–∞—Å–µ–ª–∏—Ç—å—Å—è –≤ –æ–¥–Ω—É –∫–æ–º–Ω–∞—Ç—É —Å –¥—Ä—É–≥–æ–º –∏–ª–∏ –ø–æ–¥—Ä—É–≥–æ–π?", callback_data='dorm_prov_friend')
        )
        markup.add(*back_home_buttons('dorm_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'dorm_prov_who':
        text = "–î–∞, –º–µ—Å—Ç–æ –≤ –æ–±—â–µ–∂–∏—Ç–∏–∏ –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª—è–µ—Ç—Å—è –≤—Å–µ–º –∏–Ω–æ–≥–æ—Ä–æ–¥–Ω–∏–º —Å—Ç—É–¥–µ–Ω—Ç–∞–º (–∫–∞–∫ –±—é–¥–∂–µ—Ç–Ω–æ–π, —Ç–∞–∫ –∏ –ø–ª–∞—Ç–Ω–æ–π –æ—Å–Ω–æ–≤—ã –æ–±—É—á–µ–Ω–∏—è), —É –∫–æ—Ç–æ—Ä—ã—Ö –Ω–µ—Ç –ø–æ—Å—Ç–æ—è–Ω–Ω–æ–π –ø—Ä–æ–ø–∏—Å–∫–∏ –≤ –ö—Ä–∞—Å–Ω–æ—è—Ä—Å–∫–µ."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_provision', 'main'))
    elif data == 'dorm_prov_choose':
        text = "–ù–µ—Ç, –≤—ã–±—Ä–∞—Ç—å –æ–±—â–µ–∂–∏—Ç–∏–µ —Å–∞–º–æ—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ –Ω–µ–ª—å–∑—è. –†–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –º–µ—Å—Ç –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –Ω–∞ –æ—Å–Ω–æ–≤–∞–Ω–∏–∏ –í–∞—à–µ–≥–æ —Ä–µ–π—Ç–∏–Ω–≥–∞ (—Å—É–º–º—ã –±–∞–ª–ª–æ–≤ –ï–ì–≠)."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_provision', 'main'))
    elif data == 'dorm_prov_location':
        text = """–í—Å–µ –Ω–∞—à–∏ –æ–±—â–µ–∂–∏—Ç–∏—è —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω—ã –Ω–∞ —Ç–µ—Ä—Ä–∏—Ç–æ—Ä–∏–∏ –∫–∞–º–ø—É—Å–∞ –ø–æ —Å–ª–µ–¥—É—é—â–∏–º –∞–¥—Ä–µ—Å–∞–º: 
–ø—Ä. –°–≤–æ–±–æ–¥–Ω—ã–π, 80, –æ–±—â–µ–∂–∏—Ç–∏–µ ‚Ññ 17, 
–ø—Ä. –°–≤–æ–±–æ–¥–Ω—ã–π, 78, –æ–±—â–µ–∂–∏—Ç–∏–µ ‚Ññ 18, 
–ø—Ä. –°–≤–æ–±–æ–¥–Ω—ã–π, 76, –æ–±—â–µ–∂–∏—Ç–∏–µ ‚Ññ 19, 
–ø—Ä. –°–≤–æ–±–æ–¥–Ω—ã–π, 76 ¬´–ê¬ª, ¬´–ì¬ª, –æ–±—â–µ–∂–∏—Ç–∏–µ ‚Ññ 20, 
–ø—Ä. –°–≤–æ–±–æ–¥–Ω—ã–π, 76 ¬´–ù¬ª, –æ–±—â–µ–∂–∏—Ç–∏–µ ‚Ññ 21."""
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_provision', 'main'))
    elif data == 'dorm_prov_friend':
        text = "–¢–∞–∫–∞—è –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å –µ—Å—Ç—å, –µ—Å–ª–∏ –í–∞—à –¥—Ä—É–≥ –∏–ª–∏ –ø–æ–¥—Ä—É–≥–∞ —Ç–æ–∂–µ –ø–æ—Å—Ç—É–ø–∞–µ—Ç –≤ –ò–§–∏–Ø–ö –∏ —É –í–∞—Å –ø—Ä–∏–º–µ—Ä–Ω–æ –æ–¥–∏–Ω–∞–∫–æ–≤—ã–µ –±–∞–ª–ª—ã –ï–ì–≠. –ü–æ—Å–∫–æ–ª—å–∫—É —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –º–µ—Å—Ç –∑–∞–≤–∏—Å–∏—Ç –æ—Ç —Å—É–º–º—ã –±–∞–ª–ª–æ–≤, —à–∞–Ω—Å—ã –ø–æ–ø–∞—Å—Ç—å –≤ –æ–¥–Ω—É –∫–æ–º–Ω–∞—Ç—É –≤ —ç—Ç–æ–º —Å–ª—É—á–∞–µ –≤—ã—à–µ."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_provision', 'main'))
    elif data == 'dorm_docs':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –í–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–ö–∞–∫ —É–∑–Ω–∞—Ç—å, –≤ –∫–∞–∫–æ–µ –∏–º–µ–Ω–Ω–æ –æ–±—â–µ–∂–∏—Ç–∏–µ –º–µ–Ω—è –∑–∞—Å–µ–ª—è—Ç?", callback_data='dorm_docs_which'),
            InlineKeyboardButton("–ö–∞–∫–∏–µ –¥–æ–∫—É–º–µ–Ω—Ç—ã –Ω—É–∂–Ω—ã –¥–ª—è –∑–∞—Å–µ–ª–µ–Ω–∏—è?", callback_data='dorm_docs_needed'),
            InlineKeyboardButton("–í –∫–∞–∫–∏–µ –¥–∞—Ç—ã –∏ –≤ –∫–∞–∫–æ–µ –≤—Ä–µ–º—è –º–æ–∂–Ω–æ –±—É–¥–µ—Ç –∑–∞—Å–µ–ª–∏—Ç—å—Å—è?", callback_data='dorm_docs_dates'),
            InlineKeyboardButton("–ú–æ–∂–Ω–æ –ª–∏ —Ä–æ–¥–∏—Ç–µ–ª—è–º –∑–∞–π—Ç–∏ –≤ –∫–æ–º–Ω–∞—Ç—É –∏ –ø–æ—Å–º–æ—Ç—Ä–µ—Ç—å —É—Å–ª–æ–≤–∏—è?", callback_data='dorm_docs_parents')
        )
        markup.add(*back_home_buttons('dorm_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'dorm_docs_which':
        text = "–í —Ç–µ—á–µ–Ω–∏–µ –¥–≤—É—Ö —Ä–∞–±–æ—á–∏—Ö –¥–Ω–µ–π –ø–æ—Å–ª–µ –≤—ã—Ö–æ–¥–∞ –ø—Ä–∏–∫–∞–∑–æ–≤ –æ –∑–∞—á–∏—Å–ª–µ–Ω–∏–∏ –Ω–∞ —ç–ª–µ–∫—Ç—Ä–æ–Ω–Ω—É—é –ø–æ—á—Ç—É, –∫–æ—Ç–æ—Ä—É—é –í—ã —É–∫–∞–∑—ã–≤–∞–ª–∏ –ø—Ä–∏ –ø–æ–¥–∞—á–µ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤, –ø—Ä–∏–¥–µ—Ç –ø–∏—Å—å–º–æ. –í –Ω–µ–º –±—É–¥–µ—Ç —É–∫–∞–∑–∞–Ω –Ω–æ–º–µ—Ä –æ–±—â–µ–∂–∏—Ç–∏—è, –∫–æ–º–Ω–∞—Ç—ã –∏ –ø–µ—Ä–µ—á–µ–Ω—å –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã—Ö –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤"
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_docs', 'main'))
    elif data == 'dorm_docs_needed':
        text1 = "–í –¥–µ–Ω—å –∑–∞—Å–µ–ª–µ–Ω–∏—è –í–∞–º –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ –Ω—É–∂–Ω–æ –∏–º–µ—Ç—å –ø—Ä–∏ —Å–µ–±–µ:\n1. –û—Ä–∏–≥–∏–Ω–∞–ª –ø–∞—Å–ø–æ—Ä—Ç–∞;\n2. –ö–æ–ø–∏—é –ø–∞—Å–ø–æ—Ä—Ç–∞ (–±–µ–∑ –ø—Ä–æ–ø–∏—Å–∫–∏ –≤ –≥. –ö—Ä–∞—Å–Ω–æ—è—Ä—Å–∫–µ);\n3. 6 —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–π (3—Ö4);"
        text2 = "4. –°–ø—Ä–∞–≤–∫—É –æ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏–∏ —Ñ–ª—é–æ—Ä–æ–≥—Ä–∞—Ñ–∏–∏ (—Å—Ä–æ–∫ –¥–µ–π—Å—Ç–≤–∏—è —Å–ø—Ä–∞–≤–∫–∏ ‚Äì –æ–¥–∏–Ω –≥–æ–¥);\n5. –ö–æ–ø–∏—é –°–ù–ò–õ–°;\n6. –ö–æ–ø–∏—é –ò–ù–ù (–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –∑–Ω–∞—Ç—å –Ω–æ–º–µ—Ä)."
        bot.send_message(chat_id, text1, reply_markup=None)
        bot.send_message(chat_id, text2, reply_markup=back_home_buttons('dorm_docs', 'main'))
    elif data == 'dorm_docs_dates':
        text = "–ó–∞—Å–µ–ª–µ–Ω–∏–µ –ø–µ—Ä–≤–æ–∫—É—Ä—Å–Ω–∏–∫–æ–≤ –æ–±—ã—á–Ω–æ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –≤ –ø–æ—Å–ª–µ–¥–Ω–∏–µ –¥–Ω–∏ –∞–≤–≥—É—Å—Ç–∞, –¥–æ –Ω–∞—á–∞–ª–∞ —É—á–µ–±–Ω–æ–≥–æ –≥–æ–¥–∞. –ú—ã —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ–º —Å–ª–µ–¥–∏—Ç—å –∑–∞ —Ç–æ—á–Ω—ã–º–∏ –¥–∞—Ç–∞–º–∏ –Ω–∞ –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω–æ–º —Å–∞–π—Ç–µ –ò–§–∏–Ø–ö –±–ª–∏–∂–µ –∫ –∫–æ–Ω—Ü—É –∞–≤–≥—É—Å—Ç–∞."
        markup = InlineKeyboardMarkup()
        markup.add(InlineKeyboardButton("O—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π —Å–∞–π—Ç –ò–§–∏–Ø–ö", url="https://ifiyak.sfu-kras.ru/"))
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_docs', 'main'))
    elif data == 'dorm_docs_parents':
        text = "–í –¥–µ–Ω—å –∑–∞—Å–µ–ª–µ–Ω–∏—è –¥–æ—Å—Ç—É–ø –≤ –æ–±—â–µ–∂–∏—Ç–∏–µ –æ—Ç–∫—Ä—ã—Ç —Ç–æ–ª—å–∫–æ –¥–ª—è —Å—Ç—É–¥–µ–Ω—Ç–æ–≤, —á—Ç–æ–±—ã –æ–Ω–∏ –º–æ–≥–ª–∏ —Å–ø–æ–∫–æ–π–Ω–æ –æ—Ñ–æ—Ä–º–∏—Ç—å –¥–æ–∫—É–º–µ–Ω—Ç—ã. –†–æ–¥–∏—Ç–µ–ª–∏ —Å–º–æ–≥—É—Ç –ø–æ—Å–µ—Ç–∏—Ç—å –í–∞—Å –ø–æ–∑–∂–µ, –∫–æ–≥–¥–∞ –æ—Å–Ω–æ–≤–Ω–æ–π –ø–æ—Ç–æ–∫ —Å—Ç—É–¥–µ–Ω—Ç–æ–≤ –±—É–¥–µ—Ç –∑–∞—Å–µ–ª–µ–Ω (–æ–±—ã—á–Ω–æ –ø–æ—Å–ª–µ –ø–µ—Ä–≤–æ–π –Ω–µ–¥–µ–ª–∏ —Å–µ–Ω—Ç—è–±—Ä—è)."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_docs', 'main'))
    elif data == 'dorm_cost':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –í–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–°–∫–æ–ª—å–∫–æ —Å—Ç–æ–∏—Ç –ø—Ä–æ–∂–∏–≤–∞–Ω–∏–µ –≤ –æ–±—â–µ–∂–∏—Ç–∏–∏?", callback_data='dorm_cost_price'),
            InlineKeyboardButton("–ù—É–∂–Ω–æ –ª–∏ –≤–µ–∑—Ç–∏ —Å —Å–æ–±–æ–π –ø–æ—Å—É–¥—É –∏ –ø–æ—Å—Ç–µ–ª—å–Ω–æ–µ –±–µ–ª—å–µ?", callback_data='dorm_cost_items'),
            InlineKeyboardButton("–ï—Å—Ç—å –ª–∏ –≤ –æ–±—â–µ–∂–∏—Ç–∏–∏ —Å—Ç–æ–ª–æ–≤–∞—è –∏–ª–∏ –Ω—É–∂–Ω–æ –≥–æ—Ç–æ–≤–∏—Ç—å —Å–∞–º–∏–º?", callback_data='dorm_cost_dining')
        )
        markup.add(*back_home_buttons('dorm_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'dorm_cost_price':
        text = "–°—Ç–æ–∏–º–æ—Å—Ç—å –ø—Ä–æ–∂–∏–≤–∞–Ω–∏—è –≤ –æ–±—â–µ–∂–∏—Ç–∏–∏ –∑–∞–≤–∏—Å–∏—Ç –æ—Ç –µ–≥–æ —Ç–∏–ø–∞ (–∫–æ—Ä–∏–¥–æ—Ä–Ω—ã–π –∏–ª–∏ –∫–≤–∞—Ä—Ç–∏—Ä–Ω—ã–π). –ê–∫—Ç—É–∞–ª—å–Ω—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –í—ã –º–æ–∂–µ—Ç–µ –Ω–∞–π—Ç–∏ –≤ —Ä–∞–∑–¥–µ–ª–µ ¬´–û–±—â–µ–∂–∏—Ç–∏—è¬ª –Ω–∞ —Å–∞–π—Ç–µ –°–§–£."
        markup = InlineKeyboardMarkup()
        markup.add(InlineKeyboardButton("–ê–∫—Ç—É–∞–ª—å–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è", url="https://sfu.ru/ru/about/campus/hostels"))
        bot.send_message(chat_id, text, reply_markup=markup)
        bot.send_message(chat_id, "üîô –ù–∞–∑–∞–¥", reply_markup=back_home_buttons('dorm_cost', 'main'))
    elif data == 'dorm_cost_items':
        text = "–ü–æ—Å—Ç–µ–ª—å–Ω–æ–µ –±–µ–ª—å–µ –í–∞–º –º–æ–≥—É—Ç –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–∏—Ç—å –≤ –æ–±—â–µ–∂–∏—Ç–∏–∏ –ø–æ –∑–∞–ø—Ä–æ—Å—É. –ê –≤–æ—Ç –ø–æ—Å—É–¥—É –¥–ª—è –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è –∏ –ø—Ä–∏–µ–º–∞ –ø–∏—â–∏ –Ω—É–∂–Ω–æ –ø—Ä–∏–≤–µ–∑—Ç–∏ —Å–≤–æ—é."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_cost', 'main'))
    elif data == 'dorm_cost_dining':
        text = "–í –∑–¥–∞–Ω–∏—è—Ö –æ–±—â–µ–∂–∏—Ç–∏–π —Å—Ç–æ–ª–æ–≤—ã—Ö –Ω–µ—Ç, –Ω–æ –µ—Å—Ç—å –∫—É—Ö–Ω—è (–≤ –æ–±—â–µ–∂–∏—Ç–∏–∏ –∫–æ—Ä–∏–¥–æ—Ä–Ω–æ–≥–æ —Ç–∏–ø–∞ –∫—É—Ö–Ω—è –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –Ω–∞ —ç—Ç–∞–∂–µ). –°—Ç–æ–ª–æ–≤—ã–µ –µ—Å—Ç—å –≤ —É—á–µ–±–Ω—ã—Ö –∫–æ—Ä–ø—É—Å–∞—Ö, –∫–æ—Ç–æ—Ä—ã–µ –Ω–∞—Ö–æ–¥—è—Ç—Å—è –≤ –ø–µ—à–µ–π –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç–∏ –æ—Ç –æ–±—â–µ–∂–∏—Ç–∏–π. –¢–∞–∫–∂–µ –Ω–∞ —Ç–µ—Ä—Ä–∏—Ç–æ—Ä–∏–∏ –∫–∞–º–ø—É—Å–∞ –µ—Å—Ç—å –º–∞–≥–∞–∑–∏–Ω—ã."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('dorm_cost', 'main'))
    elif data == 'dorm_main':
        handle_dormitory(chat_id)

# Section: –£—á–µ–±–Ω—ã–π –ø—Ä–æ—Ü–µ—Å—Å
def handle_educational_process(chat_id):
    text = "–í —ç—Ç–æ–º —Ä–∞–∑–¥–µ–ª–µ –í—ã –Ω–∞–π–¥–µ—Ç–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Ç–æ–º, –∫–∞–∫ –ø—Ä–æ—Ö–æ–¥—è—Ç –∑–∞–Ω—è—Ç–∏—è. –í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –í–∞—Å –≤–æ–ø—Ä–æ—Å:"
    markup = InlineKeyboardMarkup(row_width=1)
    buttons = [
        InlineKeyboardButton("–†–∞—Å–ø–∏—Å–∞–Ω–∏–µ –∑–∞–Ω—è—Ç–∏–π", callback_data='edu_schedule'),
        InlineKeyboardButton("–ú–µ—Å—Ç–æ —É—á–µ–±—ã –∏ –∏–Ω—Ñ—Ä–∞—Å—Ç—Ä—É–∫—Ç—É—Ä–∞", callback_data='edu_location')
    ]
    markup.add(*buttons)
    markup.add(InlineKeyboardButton("üîô –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data='main'))
    bot.send_message(chat_id, text, reply_markup=markup)

def handle_edu_sub(chat_id, data):
    if data == 'edu_schedule':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –í–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–í–æ —Å–∫–æ–ª—å–∫–æ –Ω–∞—á–∏–Ω–∞—é—Ç—Å—è –∑–∞–Ω—è—Ç–∏—è?", callback_data='edu_sched_start'),
            InlineKeyboardButton("–£—á–∞—Ç—Å—è –ª–∏ —Å—Ç—É–¥–µ–Ω—Ç—ã –ø–æ —Å—É–±–±–æ—Ç–∞–º?", callback_data='edu_sched_sat'),
            InlineKeyboardButton("–í –∫–∞–∫—É—é —Å–º–µ–Ω—É –ø—Ä–æ—Ö–æ–¥—è—Ç –∑–∞–Ω—è—Ç–∏—è?", callback_data='edu_sched_shift'),
            InlineKeyboardButton("–ì–¥–µ –º–æ–∂–Ω–æ –ø–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Ä–∞—Å–ø–∏—Å–∞–Ω–∏–µ?", callback_data='edu_sched_where'),
            InlineKeyboardButton("–°–∫–æ–ª—å–∫–æ –¥–ª–∏—Ç—Å—è –±–æ–ª—å—à–∞—è –ø–µ—Ä–µ–º–µ–Ω–∞?", callback_data='edu_sched_break')
        )
        markup.add(*back_home_buttons('edu_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'edu_sched_start':
        text = "–ü–µ—Ä–≤–∞—è –ø–∞—Ä–∞ –≤ –Ω–∞—à–µ–º –∏–Ω—Å—Ç–∏—Ç—É—Ç–µ –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è –≤ 8:30."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('edu_schedule', 'main'))
    elif data == 'edu_sched_sat':
        text = "–î–∞, —Å—É–±–±–æ—Ç–∞ —É –Ω–∞—Å —è–≤–ª—è–µ—Ç—Å—è —É—á–µ–±–Ω—ã–º –¥–Ω–µ–º."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('edu_schedule', 'main'))
    elif data == 'edu_sched_shift':
        text = "–ó–∞–Ω—è—Ç–∏—è –ø—Ä–æ—Ö–æ–¥—è—Ç –≤ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏–∏ —Å —É—á–µ–±–Ω—ã–º —Ä–∞—Å–ø–∏—Å–∞–Ω–∏–µ–º. –û–Ω–æ –º–æ–∂–µ—Ç –º–µ–Ω—è—Ç—å—Å—è –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –∫—É—Ä—Å–∞ –∏ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è, –ø–æ—ç—Ç–æ–º—É —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ–º —Å–ª–µ–¥–∏—Ç—å –∑–∞ –Ω–∏–º –≤–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ. –ê–∫—Ç—É–∞–ª—å–Ω–æ–µ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏–µ –ø—É–±–ª–∏–∫—É–µ—Ç—Å—è –Ω–∞ —Å–∞–π—Ç–µ –ò–§–∏–Ø–ö –∏ –Ω–∞ —Å–∞–π—Ç–µ –°–§–£."
        markup = InlineKeyboardMarkup()
        markup.add(InlineKeyboardButton("O—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π —Å–∞–π—Ç –ò–§–∏–Ø–ö", url="https://ifiyak.sfu-kras.ru/"))
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('edu_schedule', 'main'))
    elif data == 'edu_sched_where':
        text = """–í—ã –≤—Å–µ–≥–¥–∞ –º–æ–∂–µ—Ç–µ –Ω–∞–π—Ç–∏ –∞–∫—Ç—É–∞–ª—å–Ω–æ–µ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏–µ –∑–∞–Ω—è—Ç–∏–π –¥–≤—É–º—è —Å–ø–æ—Å–æ–±–∞–º–∏:
üìç –ù–∞ —Å–∞–π—Ç–µ –ò–§–∏–Ø–ö –≤ —Ä–∞–∑–¥–µ–ª–µ ¬´–°—Ç—É–¥–µ–Ω—Ç—É¬ª;
üìç –ù–∞ —Å–∞–π—Ç–µ –°–§–£ –≤ —Ä–∞–∑–¥–µ–ª–µ ¬´–†–∞—Å–ø–∏—Å–∞–Ω–∏–µ¬ª."""
        markup = InlineKeyboardMarkup()
        markup.add(InlineKeyboardButton("–°—Ç—É–¥–µ–Ω—Ç—É", url="https://ifiyak.sfu-kras.ru/raspisanie/"))
        markup.add(InlineKeyboardButton("–†–∞—Å–ø–∏—Å–∞–Ω–∏–µ", url="https://sfu.ru/ru/education/schedule"))
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('edu_schedule', 'main'))
    elif data == 'edu_sched_break':
        text = "–ë–æ–ª—å—à–∞—è –ø–µ—Ä–µ–º–µ–Ω–∞ –¥–ª–∏—Ç—Å—è 35 –º–∏–Ω—É—Ç. –≠—Ç–æ–≥–æ –≤—Ä–µ–º–µ–Ω–∏ –≤–ø–æ–ª–Ω–µ –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ, —á—Ç–æ–±—ã –æ—Ç–¥–æ—Ö–Ω—É—Ç—å –∏ –ø–æ–æ–±–µ–¥–∞—Ç—å."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('edu_schedule', 'main'))
    elif data == 'edu_location':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–ü–æ –∫–∞–∫–æ–º—É –∞–¥—Ä–µ—Å—É –±—É–¥—É—Ç –ø—Ä–æ—Ö–æ–¥–∏—Ç—å –∑–∞–Ω—è—Ç–∏—è?", callback_data='edu_loc_address'),
            InlineKeyboardButton("–ï—Å—Ç—å –ª–∏ –≤ –∫–æ—Ä–ø—É—Å–∞—Ö —Å—Ç–æ–ª–æ–≤—ã–µ?", callback_data='edu_loc_dining')
        )
        markup.add(*back_home_buttons('edu_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'edu_loc_address':
        text = "–ë–æ–ª—å—à–∏–Ω—Å—Ç–≤–æ –∑–∞–Ω—è—Ç–∏–π –ø—Ä–æ—Ö–æ–¥–∏—Ç –≤ —É—á–µ–±–Ω–æ–º –∫–æ—Ä–ø—É—Å–µ –ø–æ –∞–¥—Ä–µ—Å—É: –ø—Ä. –°–≤–æ–±–æ–¥–Ω—ã–π, 82–ê. –¢–∞–∫–∂–µ —á–∞—Å—Ç—å –ª–µ–∫—Ü–∏–π –∏–ª–∏ —Å–µ–º–∏–Ω–∞—Ä–æ–≤ –º–æ–∂–µ—Ç –ø—Ä–æ–≤–æ–¥–∏—Ç—å—Å—è –≤ —Å–æ—Å–µ–¥–Ω–∏—Ö –∫–æ—Ä–ø—É—Å–∞—Ö, —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω–Ω—ã—Ö —Ä—è–¥–æ–º –Ω–∞ —Ç–µ—Ä—Ä–∏—Ç–æ—Ä–∏–∏ –∫–∞–º–ø—É—Å–∞."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('edu_location', 'main'))
    elif data == 'edu_loc_dining':
        text = "–î–∞, –≤–æ –≤—Å–µ—Ö —É—á–µ–±–Ω—ã—Ö –∫–æ—Ä–ø—É—Å–∞—Ö –µ—Å—Ç—å —Å—Ç–æ–ª–æ–≤—ã–µ, –≥–¥–µ –í—ã –º–æ–∂–µ—Ç–µ –ø–æ–æ–±–µ–¥–∞—Ç—å –≤–æ –≤—Ä–µ–º—è –ø–µ—Ä–µ—Ä—ã–≤–æ–≤."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('edu_location', 'main'))
    elif data == 'edu_main':
        handle_educational_process(chat_id)

# Section: –í—ã–±–æ—Ä —è–∑—ã–∫–æ–≤—ã—Ö –≥—Ä—É–ø–ø
def handle_language_groups(chat_id):
    text = "–≠—Ç–æ—Ç —Ä–∞–∑–¥–µ–ª –ø—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω –¥–ª—è –±—É–¥—É—â–∏—Ö –ª–∏–Ω–≥–≤–∏—Å—Ç–æ–≤ –∏ –ø–µ—Ä–µ–≤–æ–¥—á–∏–∫–æ–≤. –ó–¥–µ—Å—å –í—ã —É–∑–Ω–∞–µ—Ç–µ, –∫–∞–∫ –≤—ã–±—Ä–∞—Ç—å —è–∑—ã–∫ –¥–ª—è –∏–∑—É—á–µ–Ω–∏—è –∏ –∑–∞–ø–∏—Å–∞—Ç—å—Å—è –≤ –Ω—É–∂–Ω—É—é –≥—Ä—É–ø–ø—É. –í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –í–∞—Å –≤–æ–ø—Ä–æ—Å:"
    markup = InlineKeyboardMarkup(row_width=1)
    buttons = [
        InlineKeyboardButton("‚óè	–ö–∞–∫ –ø–æ–ø–∞—Å—Ç—å –≤ –≥—Ä—É–ø–ø—É (–∫–∏—Ç–∞–π—Å–∫–∏–π –∏ –¥—Ä.)", callback_data='lang_distribution'),
        InlineKeyboardButton("–°–º–µ–Ω–∞ –≥—Ä—É–ø–ø—ã", callback_data='lang_change')
    ]
    markup.add(*buttons)
    markup.add(InlineKeyboardButton("üîô –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data='main'))
    bot.send_message(chat_id, text, reply_markup=markup)

def handle_lang_sub(chat_id, data):
    if data == 'lang_distribution':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –í–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–ö–∞–∫–∏–µ —è–∑—ã–∫–∏ –∏–∑—É—á–∞—é—Ç—Å—è –≤ –ò–§–∏–Ø–ö?", callback_data='lang_dist_languages'),
            InlineKeyboardButton("–ö–∞–∫ –ø–æ–ø–∞—Å—Ç—å –≤ –∫–∏—Ç–∞–π—Å–∫—É—é –≥—Ä—É–ø–ø—É?", callback_data='lang_dist_chinese'),
            InlineKeyboardButton("–£ –º–µ–Ω—è 61 –±–∞–ª–ª –ï–ì–≠ –ø–æ –∞–Ω–≥–ª–∏–π—Å–∫–æ–º—É, –ø–æ–ø–∞–¥—É –ª–∏ —è –≤ –∫–∏—Ç–∞–π—Å–∫—É—é –≥—Ä—É–ø–ø—É?", callback_data='lang_dist_61'),
            InlineKeyboardButton("–ö–∞–∫ —É—á–∏—Ç—ã–≤–∞—é—Ç—Å—è –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç—ã –ø—Ä–∏ –≤—ã–±–æ—Ä–µ —è–∑—ã–∫–∞?", callback_data='lang_dist_priorities')
        )
        markup.add(*back_home_buttons('lang_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'lang_dist_languages':
        text = """–ù–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∞—Ö ¬´–õ–∏–Ω–≥–≤–∏—Å—Ç–∏–∫–∞¬ª –∏ ¬´–ü–µ—Ä–µ–≤–æ–¥ –∏ –ø–µ—Ä–µ–≤–æ–¥–æ–≤–µ–¥–µ–Ω–∏–µ¬ª –í—ã –º–æ–∂–µ—Ç–µ –∏–∑—É—á–∞—Ç—å —Å–ª–µ–¥—É—é—â–∏–µ —è–∑—ã–∫–∏:
üìç –ö–∏—Ç–∞–π—Å–∫–∏–π;
üìç –Ø–ø–æ–Ω—Å–∫–∏–π;
üìç –ò—Å–ø–∞–Ω—Å–∫–∏–π;
üìç –ù–µ–º–µ—Ü–∫–∏–π;
üìç –§—Ä–∞–Ω—Ü—É–∑—Å–∫–∏–π;
üìç –†—É—Å—Å–∫–∏–π –∫–∞–∫ –∏–Ω–æ—Å—Ç—Ä–∞–Ω–Ω—ã–π."""
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('lang_distribution', 'main'))
    elif data == 'lang_dist_chinese':
        text = "–ù–∞–±—Ä–∞—Ç—å –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–π –±–∞–ª–ª –ï–ì–≠ –ø–æ –∞–Ω–≥–ª–∏–π—Å–∫–æ–º—É —è–∑—ã–∫—É, —É–∫–∞–∑–∞–Ω–Ω—ã–π –≤ –ü–æ–ª–æ–∂–µ–Ω–∏–∏ –æ —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–∏ –ø–æ —è–∑—ã–∫–æ–≤—ã–º –≥—Ä—É–ø–ø–∞–º."
        markup = InlineKeyboardMarkup()
        markup.add(InlineKeyboardButton("–û—Ç–∫—Ä—ã—Ç—å –ü–æ–ª–æ–∂–µ–Ω–∏–µ –≤ PDF", url=POLOZHENIE_PDF))
        bot.send_message(chat_id, text, reply_markup=markup)
        bot.send_message(chat_id, "üîô –ù–∞–∑–∞–¥", reply_markup=back_home_buttons('lang_distribution', 'main'))
    elif data == 'lang_dist_61':
        text = "–î–ª—è –∑–∞—á–∏—Å–ª–µ–Ω–∏—è –≤ –∫–∏—Ç–∞–π—Å–∫—É—é –≥—Ä—É–ø–ø—É –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –Ω–∞–±—Ä–∞—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω—ã–π –±–∞–ª–ª –ï–ì–≠ –ø–æ –∏–Ω–æ—Å—Ç—Ä–∞–Ω–Ω–æ–º—É —è–∑—ã–∫—É. –≠—Ç–æ—Ç –±–∞–ª–ª —É–∫–∞–∑–∞–Ω –≤ –ü–æ–ª–æ–∂–µ–Ω–∏–∏ –æ —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–∏ –ø–æ —è–∑—ã–∫–æ–≤—ã–º –≥—Ä—É–ø–ø–∞–º."
        markup = InlineKeyboardMarkup()
        markup.add(InlineKeyboardButton("–û—Ç–∫—Ä—ã—Ç—å –ü–æ–ª–æ–∂–µ–Ω–∏–µ –≤ PDF", url=POLOZHENIE_PDF))
        bot.send_message(chat_id, text, reply_markup=markup)
        bot.send_message(chat_id, "üîô –ù–∞–∑–∞–¥", reply_markup=back_home_buttons('lang_distribution', 'main'))
    elif data == 'lang_dist_priorities':
        text = "–ü—Ä–∏ —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–∏ —É—á–∏—Ç—ã–≤–∞–µ—Ç—Å—è –í–∞—à –ø–µ—Ä–≤—ã–π –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç, –∞ —Ç–∞–∫–∂–µ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è, —É–∫–∞–∑–∞–Ω–Ω—ã–µ –≤ –ü–æ–ª–æ–∂–µ–Ω–∏–∏ –æ —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–∏ –ø–æ —è–∑—ã–∫–æ–≤—ã–º –≥—Ä—É–ø–ø–∞–º. –û–∑–Ω–∞–∫–æ–º–∏—Ç—å—Å—è —Å –ø—Ä–∞–≤–∏–ª–∞–º–∏ –º–æ–∂–Ω–æ –ø–æ —Å—Å—ã–ª–∫–µ –Ω–∏–∂–µ:"
        markup = InlineKeyboardMarkup()
        markup.add(InlineKeyboardButton("–û—Ç–∫—Ä—ã—Ç—å –ü–æ–ª–æ–∂–µ–Ω–∏–µ –≤ PDF", url=POLOZHENIE_PDF))
        bot.send_message(chat_id, text, reply_markup=markup)
        bot.send_message(chat_id, "üîô –ù–∞–∑–∞–¥", reply_markup=back_home_buttons('lang_distribution', 'main'))
    elif data == 'lang_change':
        text = "–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å"
        markup = InlineKeyboardMarkup(row_width=1)
        markup.add(
            InlineKeyboardButton("–ú–æ–∂–Ω–æ –ª–∏ –ø–æ–º–µ–Ω—è—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–µ —è–∑—ã–∫–∏?", callback_data='lang_change_switch'),
            InlineKeyboardButton("–ú–æ–∂–Ω–æ –ª–∏ –ø–µ—Ä–µ–≤–µ—Å—Ç–∏—Å—å –∏–∑ –≥—Ä—É–ø–ø—ã –≤ –≥—Ä—É–ø–ø—É, –µ—Å–ª–∏ —è–∑—ã–∫ –Ω–µ –Ω—Ä–∞–≤–∏—Ç—Å—è?", callback_data='lang_change_dislike')
        )
        markup.add(*back_home_buttons('lang_main', 'main').keyboard[0])
        bot.send_message(chat_id, text, reply_markup=markup)
    elif data == 'lang_change_switch' or data == 'lang_change_dislike':
        text = "–î–∞, –Ω–æ –Ω–µ –ø–æ–∑–¥–Ω–µ–µ —á–µ–º —á–µ—Ä–µ–∑ 2 –Ω–µ–¥–µ–ª–∏ —Å –º–æ–º–µ–Ω—Ç–∞ –Ω–∞—á–∞–ª–∞ –ø–µ—Ä–≤–æ–≥–æ —Å–µ–º–µ—Å—Ç—Ä–∞ –æ–±—É—á–µ–Ω–∏—è."
        bot.send_message(chat_id, text, reply_markup=back_home_buttons('lang_change', 'main'))
    elif data == 'lang_main':
        handle_language_groups(chat_id)

# Section: –ö–æ–Ω—Ç–∞–∫—Ç—ã
def handle_contacts(chat_id):
    text = """–¢–µ–ª–µ—Ñ–æ–Ω: +79230153878

–í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã –ø—Ä–∏–µ–º–Ω–æ–π –∫–æ–º–∏—Å—Å–∏–∏: –ø–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫ ‚Äî –ø—è—Ç–Ω–∏—Ü–∞, —Å 9 –¥–æ 17."""
    markup = InlineKeyboardMarkup(row_width=2)
    markup.add(
        InlineKeyboardButton("üè† –í –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data='main'),
        InlineKeyboardButton("üìû –°–≤—è–∑–∞—Ç—å—Å—è —Å –∫–æ–º–∏—Å—Å–∏–µ–π", callback_data='contacts')
    )
    bot.send_message(chat_id, text, reply_markup=markup)

if __name__ == '__main__':
    bot.infinity_polling()
